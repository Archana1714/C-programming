#include<iostream>
using namespace std;


int main(){
int i=1,j=1,k=1;
    int N;
    cin>>N;
    while(i<=N){
        k=1;
        while(k<=N-i){
            cout<<"  ";
            k=k+1;
        }
        k=1;
        while(j<2*i){
            cout<<"*";
            j=j+1;
        }
        j=1;
        i=i+1;
        cout<<endl;
    }
    }
