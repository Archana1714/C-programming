#include <iostream>

using namespace std;

int main()
{
   int n;
   
   //taking input
   
   cin>>n;
   int i=1;
   //loop1
   
   while(i<=n){
        int spaces=1;
        
        //loop2
        
        while(spaces<=n-i){
            cout<<" ";
            spaces=spaces+1;
        }
        int stars=1;
        
        //loop3
        
        while(stars<=i){
            cout<<"*";
            stars=stars+1;
        }
        cout<<endl;
        i=i+1;
   }
}
